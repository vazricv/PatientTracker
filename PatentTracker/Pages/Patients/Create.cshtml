@page
@model PatentTracker.Pages.Patients.CreateModel
@{
	ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create New Patient</h2>
<br />


<div class="border">
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="container" style="padding:30px">
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="newpatient.Name"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="newpatient.Name" class="form-control" />
					</div>
					<span asp-validation-for="newpatient.Name" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="newpatient.BOD"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="newpatient.BOD" class="form-control" />
					</div>
					<span asp-validation-for="newpatient.BOD" class="text-danger"></span>
				</div>
			</div>
	
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2 offset-sm-2">
						<input type="submit" value="Create" class="btn btn-primary form-control" />
					</div>
					<div class="col-sm-2">
						<a asp-route-id="@Model.GetInitialStageID()" asp-page="Index" class="btn btn-success form-control">Back To Patients List</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}