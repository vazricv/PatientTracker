@page
@model PatentTracker.Pages.Stages.CreateModel
@{
	ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Stage</h2>
<br />

<div class="border">
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="container" style="padding:30px">
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Stage.Name"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="Stage.Name" class="form-control" />
					</div>
					<span asp-validation-for="Stage.Name" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Stage.OrderNumber"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="Stage.OrderNumber" class="form-control" />
					</div>
					<span asp-validation-for="Stage.OrderNumber" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Stage.DueTime"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="Stage.DueTime" class="form-control" />
					</div>
					<span asp-validation-for="Stage.DueTime" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label asp-for="Stage.Description"></label>
					</div>
					<div class="col-sm-4">
						<input asp-for="Stage.Description" class="form-control" />
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2 offset-sm-2">
						<input type="submit" value="Create" class="btn btn-primary form-control" />
					</div>
					<div class="col-sm-2">
						<a asp-page="Index" class="btn btn-success form-control">Back To Stages</a>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}